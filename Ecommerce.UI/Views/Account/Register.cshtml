@using Ecommerce.UI.Models
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<hr />

<div class="row">
    <div class="col-md-8">

        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="UserName" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="UserName" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FirstName" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="FirstName" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RePassword" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input id="editor" asp-for="RePassword" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input id="editor" asp-for="Email" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>

        </form>

    </div>
</div>