@using Ecommerce.UI.Models
@model CategoryModel
@{
    ViewData["Title"] = "CreateCategory";
}

<h1>Create Category</h1>
<hr />

<div class="row">
    <div class="col-md-8">

        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div class="form-group row">
                <label asp-for="CategoryName" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="CategoryName" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CategoryDescription" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="CategoryDescription" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Url" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </div>

        </form>

    </div>
</div>
