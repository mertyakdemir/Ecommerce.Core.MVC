@using Ecommerce.UI.ViewModel
@model CategoryViewModel

@{
    ViewData["Title"] = "CategoryList";
}
    <div class="row">

        <div class="d-flex justify-content-center mb-3" style="width:100%">
            <a href="/admin/categories/create" class="btn btn-success">Create Category</a>
        </div>

        @if (Model.Categories.Count == 0)
        {
            <h2>No Category</h2>
        }

        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Category ID</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Category Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryDescription</td>
                            <td>
                                <a href="/admin/categories/@item.Id" class="btn btn-primary">Edit</a>
                            </td>
                            <td>
                                <form action="/admin/deletecategory" method="post">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

