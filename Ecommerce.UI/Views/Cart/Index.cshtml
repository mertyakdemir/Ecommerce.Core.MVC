@using Ecommerce.UI.Models
@model CartModel
@{
    ViewData["Title"] = "Index";
}

<h1>Shopping Cart</h1>

<div class="row mt-5">
    <div class="col-md-8">
        <div class="text-left">
            <h4>Cart Items</h4>
        </div>

        @if (Model.CartItems.Count > 0)
        {

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <img src="~/images/@item.ImageUrl" width="80" />
                            </td>
                            <td>@item.Name</td>
                            <td>$ @item.Price</td>
                            <td>@item.Quantity</td>
                            <td>$ @((item.Quantity * item.Price))</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Delete
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }
        else
        {
            <div class="alert alert-warning">
                No Product in Cart!
            </div>
        }
    </div>
    <div class="col-md-4">

        @if (Model.CartItems.Count > 0)
        {
            <div class="text-left">
                <h4>Cart Summary</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Cart Total</th>
                        <td>$ @Model.TotalPrice()</td>
                    </tr>
                    <tr>
                        <th>Shipping</th>
                        <td>Free</td>
                    </tr>
                    <tr>
                        <th>Order Total</th>
                        <td>$ @Model.TotalPrice()</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/" class="btn btn-primary">
                    Continue Shopping
                </a>
                <a href="/checkout" class="btn btn-primary">
                    Checkout
                </a>
            </div>

        }
    </div>
</div>
